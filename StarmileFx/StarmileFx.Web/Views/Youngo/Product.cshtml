<div class="card">
    <div class="card-header">查询条件</div>
    <div class="card-block">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control productId" placeholder="商品ID(SKU)">
            </div>
            <div class="col">
                <input type="text" class="form-control name" placeholder="商品名称">
            </div>
            <div class="col">
                <select class="form-control type" id="unitItem"></select>
            </div>
            <div class="col">
                <select class="form-control state">
                    <option value="true" selected>有效</option>
                    <option value="false">无效</option>
                </select>
            </div>
            <div class="col">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control starDate" />
                    <span class="input-group-addon add-on">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>_
            <div class="col">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control endDate" />
                    <span class="input-group-addon add-on">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>
            <div class="col columns-left">
                <button type="button" style="margin-left:50px" id="btn_query" class="btn btn-primary"><i class="fa fa-search"></i>查询</button>
            </div>
        </div>
    </div>
</div>
<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group mr-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i>新增</button>
    </div>
    <div class="btn-group mr-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i>删除</button>
    </div>
    <div class="btn-group mr-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i>修改</button>
    </div>
</div>
<table id="table"></table>

