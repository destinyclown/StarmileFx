@page
@model LoginModel
@{
}
<div class="wrapper">
    <div class="container" style="padding-top:10%;">
        <div class="logo">
            <i class="fa fa-modx"></i>
            <h1><span>@WebConfig.Value.WebName </span>站点容器</h1>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 form-row">
                <form class="form-horizontal" method="post">
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-1">
                            <input asp-for="FromData.Email" class="form-control" placeholder="账号" />
                            <span asp-validation-for="FromData.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-1">
                            <input asp-for="FromData.Password" class="form-control" placeholder="密码" />
                            <span asp-validation-for="FromData.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group" style="display: inline-block;">
                        <div class="col-lg-12  col-lg-offset-4" style="font-size: 14px;font-weight: 400;">
                            <input asp-for="FromData.RememberMe" />
                            @Html.DisplayNameFor(m => m.FromData.RememberMe)
                        </div>
                    </div>
                    <div class="form-group" style="float:right;">
                        <div class="col-lg-4 col-lg-pull-3">
                            <input type="submit" id="loginbtn" name="loginbtn" value="登 录" class="btn btn-primary" style="width:100px;">
                        </div>
                    </div>
                </form>
                <div asp-validation-summary="ModelOnly" class="login_tips"></div>
            </div>
        </div>

    </div>
    <ul class="bg-bubbles">
        <li></li>
