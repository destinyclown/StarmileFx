<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@WebConfigModel.Value.WebName</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/css/footer.css" rel="stylesheet" />
        <link href="~/css/font-awesome.css" rel="stylesheet" />
        <link href="~/css/search.css" rel="stylesheet" />
        <link href="~/css/ectouch.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/css/footer.css" rel="stylesheet" />
        <link href="~/css/font-awesome.css" rel="stylesheet" />
        <link href="~/css/search.css" rel="stylesheet" />
        <link href="~/css/ectouch.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <div data-role="page" id="mypage" data-url="mypage" tabindex="0" class="ui-page ui-page-theme-a ui-page-header-fixed ui-page-footer-fixed ui-page-active" style="padding-top: 40px; padding-bottom: 47px; min-height: 580px;">

        @RenderBody()
        <div data-role="footer" data-position="fixed" data-tap-toggle="false" role="contentinfo" class="ui-footer ui-footer-fixed slideup ui-bar-inherit">

            <div data-role="navbar" class="ui-navbar" role="navigation">

                <ul class="footer shop ui-grid-c" id="ShopFooter" style="width: 100%;display: flex;justify-content: space-between;align-items: center;padding: 5px 0;">
                    <li class="ui-block-a"><a href="/home/index" data-ajax="false" class="ui-link ui-btn"><b class="fa-home fa"></b><p>首页</p></a></li>
                    <li class="ui-block-b"><a href="/home/Search" data-ajax="false" class="ui-link ui-btn"><b class="fa-th-list fa"></b><p>分类</p></a></li>

                    <li class="ui-block-c"><a href="/home/ShoppingCart" data-ajax="false" class="ui-link ui-btn"><b class="fa-shopping-cart fa"></b><p>购物车</p></a></li>
                    <li class="ui-block-d"><a href="/home/MemberDefault" data-ajax="false" class="ui-link ui-btn"><b class="fa-user fa"></b><p>我</p></a></li>

                </ul>
            </div>
        </div>
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/swiper-3.2.5.min.js"></script>
        <script src="~/js/common.js"></script>
        <script src="~/js/ectouch.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/swiper-3.2.5.min.js"></script>
        <script src="~/js/common.js"></script>
        <script src="~/js/ectouch.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
